<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <title>goodLife</title>
  <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
  <link href="~/Content/css/all.min.css" rel="stylesheet" />
  <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

  <link href="~/Content/css/clean-blog.min.css" rel="stylesheet" />

</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="btn btn-default navbar-btn" href="~/Home/DisplayCategory">GoodLife</a>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                   
                    <li class="nav-item">
                        @Html.Action("Summary","Cart")
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    @RenderSection("Header",false)

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @RenderBody()
            </div>
            
        </div>
        
    </div>

    <hr>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">  
                    <p class="copyright text-muted">Copyright &copy; GoodLife @DateTime.Now.ToString("yyyy")</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/js/clean-blog.min.js"></script>
    @RenderSection("scripts", required: false)

</body>

</html>

    


